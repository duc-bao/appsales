<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    app:cardCornerRadius="4dp"
    android:layout_margin="5dp"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/item_giohang_img"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_new"
            android:layout_width="100dp"
            android:layout_height="100dp">
        </ImageView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:id="@+id/item_giohang_tensp"
                android:text="Tên sản phẩm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <LinearLayout
                android:weightSum="18"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_giohang_gia"
                    android:layout_width="57dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="5"
                    android:text="1500000"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="15sp"></TextView>
                <ImageView
                    android:layout_weight="2"
                    android:layout_marginTop="5dp"
                    android:id="@+id/item_giohang_tru"
                    android:src="@drawable/icontru"
                    android:layout_width="15dp"
                    android:layout_height="15dp">
                </ImageView>
                <TextView
                    android:layout_weight="2"
                    android:id="@+id/item_giohang_soluong"
                    android:text=" 1 "
                    android:textSize="15sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_width="20dp"
                    android:layout_height="20dp">
                </TextView>
                <ImageView
                    android:layout_weight="2"
                    android:layout_marginTop="5dp"
                    android:id="@+id/item_giohang_cong"
                    android:src="@drawable/iconcong"
                    android:layout_width="15dp"
                    android:layout_height="15dp">
                </ImageView>
                <ImageView
                    android:layout_weight="2"
                    android:layout_marginTop="5dp"
                    android:id="@+id/item_giohang_bang"
                    android:src="@drawable/iconbang"
                    android:layout_width="15dp"
                    android:layout_height="15dp">
                </ImageView>
                <TextView
                    android:id="@+id/item_giohang_giaspbang"
                    android:layout_gravity="center|center_vertical"
                    android:text="15000 đ"
                    android:textSize="15sp"
                    android:textColor="@android:color/holo_red_light"
                    android:layout_width="wrap_content"
                    android:layout_weight="5"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <CheckBox
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/checkboxgiohang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </CheckBox>
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>